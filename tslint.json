{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"env": {
		"browser": true,
		"jasmine": true,
		"jest": true
	},
	"jsRules": true,
	"rules": {
		"arrow-parens": {
			"options": "ban-single-arg-parens",
			"severity": "off"
		},
		"indent": {
			"options": "tabs",
			"severity": "error"
		},
		"object-literal-key-quotes": false,
		"ordered-imports": [true, {
			"grouped-imports": true,
			"import-sources-order": "lowercase-first",
			"module-source-path": "full",
			"named-imports-order": "lowercase-first"
		}],
		"quotemark": {
			"options": ["jsx-double", "single"],
			"severity": "error"
		},
		"semicolon": {
			"options": "never",
			"severity": "error"
		},
		"trailing-comma": {
			"options":{
				"multiline": "never",
				"singleline": "never"
			},
			"severity": "error"
		}
	},
	"rulesDirectory": [],
	"linterOptions": {}
}
